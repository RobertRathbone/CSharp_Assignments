@model Chef

<div class="container w-75">
  <h2 class="text-center">New Chef</h2>

  <form asp-controller="Home" asp-action="ChefCreate" class="shadow p-3 mb-5 rounded" method="POST">
    <div class="form-group">
      <label asp-for="FirstName"></label>
      <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
      <input asp-for="FirstName" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="LastName"></label>
      <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
      <input asp-for="LastName" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="DOB"></label>
      <span asp-validation-for="DOB" class="text-danger font-weight-bold"></span>
      <input asp-for="DOB" type="DateTime.Date" class="form-control">
    </div>

    <button class="btn btn-outline-success">Submit</button>
  </form>
</div>