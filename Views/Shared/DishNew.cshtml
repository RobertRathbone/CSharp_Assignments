@model Dish

<div class="container w-75">
  <h2 class="text-center">New Dish</h2>

  <form asp-controller="Home" asp-action="DishCreate" class="shadow p-3 mb-5 rounded" method="POST">
    <div class="form-group">
      <label asp-for="Name"></label>
      <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
      <input asp-for="Name" type="text" class="form-control">
    </div>

    <div class="form-group">
      @* <label asp-for="Chef"></label>
      <span asp-validation-for="Chef"></span> *@
    <div class="btn-group">
    <button type="button" class="btn btn-secondary btn-lg  dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    </button>
    @* <div class="dropdown-menu"> *@
      <select asp-for="ChefId">
      @{for (var i = 0; i<ViewBag.ChefsF.Count; i++)
      {
        <option value=@ViewBag.ChefsF[i].ChefId class="dropdown-item"> @ViewBag.ChefsF[i].FirstName  @ViewBag.ChefsF[i].LastName</option>
      } 
      }
      </select>
    @* </div> *@
</div>
      @* <input asp-for="Chef" type="text" class="form-control"> *@
    </div>

    <div class="form-group">
      <label asp-for="Tastiness"></label>
      <span asp-validation-for="Tastiness" class="text-danger font-weight-bold"></span>
      <input asp-for="Tastiness" type="int" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Calories"></label>
      <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
      <input asp-for="Calories" type="int" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Description"></label>
      <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
      <input asp-for="Description" type="text" class="form-control">
    </div>

    <button class="btn btn-outline-success">Submit</button>
  </form>
</div>